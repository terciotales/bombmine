<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_main_bomb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bomb"
            android:textSize="64sp" />

        <TextView
            android:id="@+id/tentativas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/default_count"
            android:textSize="48sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid_campo_minado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/author"
        android:layout_below="@id/linearLayout"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="monospace"
        android:shadowColor="#03A9F4"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="Criado por: TÃ©rcio Tales"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:translationZ="90dp" />

</RelativeLayout>